<!DOCTYPE html>
<html lang="no-NO">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registrer Reinsdyr - Kukkik Ano</title>
    <link href="/css/styles.css" rel="stylesheet">
</head>
<body class="bg-gray-50">
    <%- include('../partials/header') %>
    
    <main class="container mx-auto px-4 py-8">
        <div class="max-w-3xl mx-auto">
            <h1 class="text-4xl font-bold text-gray-900 mb-8 text-center">Registrer Reinsdyr</h1>
            
            <% if (typeof error !== 'undefined' && error) { %>
                <div class="bg-red-50 border-l-4 border-red-500 p-4 mb-6">
                    <p class="text-red-700"><%= error %></p>
                </div>
            <% } %>

            <form action="/reinsdyr/register" method="POST" class="bg-white rounded-xl shadow-sm p-6 space-y-6">
                <div>
                    <label for="navn" class="block text-gray-700 mb-2">Navn på reinsdyr</label>
                    <input 
                        type="text" 
                        id="navn" 
                        name="navn" 
                        required 
                        class="w-full px-4 py-2 border border-gray-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500/50"
                        value="<%= typeof oldInput !== 'undefined' ? oldInput.navn : '' %>"
                    >
                </div>
            
                <div>
                    <label for="flokkId" class="block text-gray-700 mb-2">Velg flokk</label>
                    <select 
                        id="flokkId" 
                        name="flokkId" 
                        required 
                        class="w-full px-4 py-2 border border-gray-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500/50"
                    >
                        <option value="">Velg flokk</option>
                        <% if (flokker && flokker.length > 0) { %>
                            <% flokker.forEach(flokk => { %>
                                <option value="<%= flokk._id %>" 
                                    <%= typeof oldInput !== 'undefined' && oldInput.flokkId === flokk._id.toString() ? 'selected' : '' %>>
                                    <%= flokk.navn %>
                                </option>
                            <% }) %>
                        <% } %>
                    </select>
                </div>
            
                <div>
                    <label for="fodselsdato" class="block text-gray-700 mb-2">Fødselsdato</label>
                    <input 
                        type="date" 
                        id="fodselsdato" 
                        name="fodselsdato" 
                        required 
                        class="w-full px-4 py-2 border border-gray-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500/50"
                        value="<%= typeof oldInput !== 'undefined' ? oldInput.fodselsdato : '' %>"
                    >
                </div>
            
                <button 
                    type="submit" 
                    class="w-full bg-blue-600 text-white py-3 rounded-lg hover:bg-blue-700 transition-all duration-200"
                >
                    Registrer reinsdyr
                </button>
            </form>
        </div>
    </main>

    <%- include('../partials/footer') %>
</body>
</html>